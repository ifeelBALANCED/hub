{
  "name": "hub-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "bun": "^1.2.13"
  },
  "scripts": {
    "dev": "vite --open",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "format": "prettier --write src/",
    "lint": "oxlint --ignore-pattern 'src/shared/api/client.ts'",
    "lint:type-aware": "oxlint --type-aware",
    "lint:fix": "oxlint --fix",
    "prepare": "lefthook install",
    "preinstall": "npx only-allow bun",
    "gen:api": "orval --config ./orval.config.ts",
    "test:vitest": "vitest run --config vitest.config.ts",
    "test:playwright": "playwright test --config playwright.config.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@tanstack/vue-query": "^5.90.2",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.544.0",
    "pinia": "^3.0.3",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.8",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/vue-query-devtools": "^5.90.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "dependency-cruiser": "^17.0.1",
    "dotenv": "^17.2.3",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "lefthook": "^1.13.6",
    "naive-ui": "^2.43.1",
    "npm-run-all2": "^8.0.4",
    "orval": "^7.13.0",
    "oxlint": "^1.19.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "3.6.2",
    "typescript": "~5.9.2",
    "vfonts": "^0.0.3",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
}